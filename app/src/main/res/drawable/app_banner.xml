<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gradient_start" />
            <size
                android:width="320dp"
                android:height="180dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:endColor="@color/gradient_end"
                android:startColor="@color/gradient_center"
                android:type="linear" />
            <size
                android:width="320dp"
                android:height="180dp" />
        </shape>
    </item>
    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_dark" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="40dp"
        android:left="40dp"
        android:right="40dp"
        android:top="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_gold" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>